<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragmentHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.example.fragment.fragment.HeaderFragment"
        app:layout_constraintBottom_toTopOf="@+id/fragmentDes"
        app:layout_constraintTop_toTopOf="parent"/>

    <fragment
        android:id="@+id/fragmentDes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.example.fragment.fragment.DescriptionFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHeader"/>





</androidx.constraintlayout.widget.ConstraintLayout>